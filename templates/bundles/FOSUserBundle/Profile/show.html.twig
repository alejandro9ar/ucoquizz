{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <div class="media" style="margin-top: 20px;">
        <div class="media-body">
            <div class="row">
                <a href="{{ path('fos_user_change_password') }}" class="btn btn-primary">Cambiar contraseña</a>
                <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default navbar-btn">   Desconexión</a>


                <div class="col-sm-10">
                    <h2 class="media-heading"><strong>{{ 'profile.show.username'|trans }}: </strong>  {{ user.username }} </h2>
                </div>
                <div class="col-sm-10">
                    <h4 class="media-heading"><strong>{{ 'profile.show.email'|trans }}: </strong>  {{ user.email }} </h4>
                </div>

                <div class="col-sm-10">
                    <h4 class="media-heading"><strong> Cuestionarios: </strong></h4>


                            <table class="table text-center">
                                <tr>
                                    <th class="active text-center">Nombre</th>
                                    <th class="active text-center">Descripción</th>
                                    <th class="active text-center">Preguntas</th>
                                </tr>

                                {% for questionary in user.questionary %}

                                        <tr>
                                            <td>
                                                <a href="{{ path('questionary.show', {id: questionary.id}) }}">
                                                    {{ questionary.name}}
                                                </a>
                                            </td>
                                            <td> {{ questionary.description}} </td>
                                            {% set myVal = 0 %}
                                            {% for question in questionary.question %}
                                                {% set myVal = myVal +1 %}
                                            {% endfor %}
                                            <td>{{ myVal }}</td>


                                        </tr>

                                {% endfor %}
                            </table>
                </div>


            </div>
        </div>
    </div>



{% endblock %}