{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <div class="media" style="margin-top: 30px;">
        <div class="media-body">
            <div class="row">
                <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default navbar-btn">   Desconexi√≥n</a>

                <div class="col-sm-10">
                    <h2 class="media-heading"><strong>{{ 'profile.show.username'|trans }}: </strong>  {{ user.username }} </h2>
                </div>
                <div class="col-sm-10">
                    <h4 class="media-heading"><strong>{{ 'profile.show.email'|trans }}: </strong>  {{ user.email }} </h4>
                </div>

                <div class="col-sm-10">
                    <h4 class="media-heading"><strong> Cuestionarios: </strong></h4>

                    <ul>
                        {% for cuestionario in user.cuestionario %}

                            <li><a href="{{ path('cuestionario.show', {id: cuestionario.id}) }}"> {{ cuestionario.name}} </a>
                        {% endfor %}
                    </ul>
                </div>


            </div>
        </div>
    </div>



{% endblock %}