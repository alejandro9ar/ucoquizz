
{% extends 'base.html.twig' %}

{% block body %}

    <h1>Preguntas</h1>

<div class="media" style="margin-top: 60px;">
    <div class="media-body">
        <div class="row">
            <div class="col-sm-10">

                <div class="jumbotron">
                <h3 class="media-heading"><strong>Nombre:</strong>  {{ question.title}} </h3>
            </div>


            {% set Val = 0 %}
            {% for answer in answer %}



                    <h5 class="media-heading"><strong>

                            {% set Val = Val +1 %}
                            <hr class="my-4">
                            {% if answer.correct == "1" %}
                            <div class="card border-success">
                                Respuesta {{ Val }}:  {{ answer.answertitle}} âœ”
                             </div>
                            {% else %}

                            Respuesta {{ Val }}: </strong> {{ answer.answertitle}}
                            {% endif %}
                    </h5>


            {% endfor %}
                <hr class="my-4">
            <div class="col-sm-10">
                <h5 class="media-heading"><strong>Tiempo: </strong> {{ question.duration}}</h5>

            </div>
                <a class="btn btn-success" href="{{ path('question.edit', {id: question.id}) }}"> Editar </a>

                {{ form_start(deleteForm, {'attr': {'class': 'navbar-form navbar-left'}}) }}
                {{ form_widget(deleteForm) }}

                <button type="submit" class="btn btn-secondary" onclick="return confirm('Are you sure?')">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    Delete
                </button>
                {{ form_end(deleteForm) }}

            </div>




        </div>
    </div>
</div>

    {% include 'footer.html.twig' %}
{% endblock %}