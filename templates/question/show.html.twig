
{% extends 'base.html.twig' %}

{% block body %}

    {% if hasControlAccess is defined and hasControlAccess %}
        {% include 'question/control_panel.html.twig' with {'question': question, 'deleteForm': deleteForm} %}
    {% endif %}

    <h1>Preguntas</h1>

<div class="media" style="margin-top: 60px;">
    <div class="media-body">
        <div class="row">
            <div class="col-sm-10">
                <h3 class="media-heading"><strong>Nombre:</strong>  {{ question.title}} </h3>
            </div>


            {% set Val = 0 %}
            {% for answer in answer %}

                <div class="col-sm-10">
                    <h5 class="media-heading"><strong>

                            {% set Val = Val +1 %}

                            {% if answer.correct == "1" %}
                                âœ”
                            {% endif %}

                            Respuesta {{ Val }}: </strong> {{ answer.answertitle}}</h5>

                </div>

            {% endfor %}

            <div class="col-sm-10">
                <h5 class="media-heading"><strong>Tiempo: </strong> {{ question.duration}}</h5>

                <a class="btn btn-primary" href="{{ path('question.edit', {id: question.id}) }}"> Editar </a>
                
                {{ form_start(deleteForm, {'attr': {'class': 'navbar-form navbar-left'}}) }}
                {{ form_widget(deleteForm) }}

                <button type="submit" class="btn btn-default" onclick="return confirm('Are you sure?')">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    Delete
                </button>
                {{ form_end(deleteForm) }}

            </div>




        </div>
    </div>
</div>
{% endblock %}